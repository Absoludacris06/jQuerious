<div>
  <h3>Welcome, <%= current_user.username%></h3>
</div>

<div>
  <a id="create_survey" href="/survey/new">Create a survey</a>
</div>

<div id="your_surveys">
  Your surveys
  <ul id="surveys">
  <% @user_surveys.each do |survey| %>
    <a href="/survey/<%= survey.id%>"><%=survey.name%></a> <br/>
  <% end %>
  </ul>
</div>

<div id="others_surveys">
  Popular surveys
  <ul>
  <% @all_surveys.each do |survey|%>
    <a href="/survey/<%= survey.id%>"><%=survey.name%></a> - <%= User.find(survey.user_id).username %></a> <br/>
  <% end %>
  </ul>
</div>

<div id="question">
  <%= erb :_create_qa, layout: false %>
</div>
<a href='/logout'>Logout</a>
