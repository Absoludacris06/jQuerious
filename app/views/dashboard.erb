<div>
  <h3>Welcome, <%= current_user.username%></h3>
</div>

<div id="create_survey">
  <a href="/survey/new">Create a survey</a>
</div>

<div id="your_surveys">
  Your surveys
  <ul id="surveys">
  <% @user_surveys.each do |survey| %>
    <li><a href=""><%=survey.name%></a></li>
  <% end %>
  </ul>
</div>

<div id="others_surveys">
  Popular surveys
  <ul>
  <% @all_surveys.each do |survey|%>
    <li><a href=""><%=survey.name%> - <%= User.find(survey.user_id).username %></a></li>
  <% end %>
  </ul>
</div>

<div class="btn-toolbar">
  <a class="btn" href='/logout'><i class="icon-user"></i>Log out</a>
</div>