<html>
<head>
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type="text/javascript" src='/js/jquery.easyModal.js'></script>
  <script src="/js/application.js"></script>
  <script src="/js/bootstrap.js"></script>
  <style type="text/css">
    body {
      background-image: url("http://i.imgur.com/4L8JqNq.png");
      background-size: cover;
    }
    #signin_container {
    color: black;
    background-color: #333;
    width: 30%;
    position: absolute;
    top: 60%;
    left: 35%;
    border-radius: 10px;
    text-align: center;
    border: 5px solid #fff;
    box-shadow: 10px 10px 50px #333
    }

  #signin_link {
    border-bottom: 5px solid white;
    padding: 10px;
  }

  #signup_link {
    padding: 10px;
  }

  #signin_container a {
    color: white;
    text-decoration: none;
    font-size: 30px
  }

  #signin_container a:hover {
    color: black;
    font-weight: bolder;
  }
  #signin {
  background-color: black;
  color: white;
  border-radius: 10px;
  border: 5px solid white;
  padding: 10px 20px 20px 20px;
  }

  #signup {
    background-color: black;
    color: white;
    border-radius: 10px;
    border: 5px solid white;
    padding: 10px 20px 20px 20px;
  }
  </style>
</head>
<body>
  <div id="signin_container">
    <div id="signin_link">
      <a href="#">Sign in</a>
    </div>

    <div id="signup_link">
      <a href="#">Sign up</a>
    </div>
  </div>

