<div id="view_survey">
  <h3><%= @current_survey.name %></h3>
  <% @current_survey.questions.each do |question| %>
    <ul> <span><%= question.title%></span>
      <% question.choices.each do |choice| %>
        <li> <input type="radio" name="<%= question.title%>" value="<%=choice.option%>"><%= choice.option%></li>
     <% end %>
   </ul> 
  <% end %>

</div>
